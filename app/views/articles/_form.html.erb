<%= form_with(model: article) do |form| %>

  <form>
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, id: :article_title, class:"form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :body %>
      <%= form.text_area :body, id: :article_body, class:"form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :image %>
      <%= form.text_field :image, id: :article_image, class:"form-control"%>
    </div>

    <div class="actions">
      <%= form.submit class:"btn btn-primary"%>
    </div>
  </form>
<% end %>
